@model Room
@{
    ViewData["Title"] = "ოთახის წაშლა";
}

<div class="row">
    <form asp-controller="Rooms" asp-action="DeletePOST" method="post">
        <input class="form-control" asp-for="Id" hidden />
        <div class="mb-3">
            <input class="form-control" asp-for="RoomName" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="IsFree" class="form-label">თავისუფალი</label>
            <input class="form-check-input" type="checkbox" asp-for="IsFree" disabled/>
        </div>
        <div class="mb-3">
            <input class="form-control" asp-for="DailyPrice" disabled />
        </div>
        <div class="mb-3">
            <input class="form-control" asp-for="HotelId" disabled />
        </div>
        <div class="mb-3">
            <input class="btn btn-danger" type="submit" value="წაშლა" />
        </div>
    </form>
</div>
